<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_name_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="text_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="text_repo_action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/default_dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/base5</item>
        <item name="android:paddingRight">@dimen/base5</item>
    </style>


</resources>